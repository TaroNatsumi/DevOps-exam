{
  "uid": "helpdesk-overview",
  "title": "Helpdesk Overview",
  "tags": ["helpdesk", "ops"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Tickets Created (total)",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 5, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(helpdesk_tickets_created_total)",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "DB Up",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 5, "w": 4, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "pg_up",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "DOWN"}, "1": {"text": "UP"}}}
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "DB Connections",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 5, "w": 6, "x": 10, "y": 0},
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{datname=\"helpdesk\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Tickets Created Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 5, "w": 8, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "rate(helpdesk_tickets_created_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "App CPU",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 5},
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cores"
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "App Memory (RSS)",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 5},
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "DB Transactions",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 5},
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname=\"helpdesk\"}[5m])",
          "refId": "A",
          "legendFormat": "commit"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{datname=\"helpdesk\"}[5m])",
          "refId": "B",
          "legendFormat": "rollback"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "DB Cache Hit Ratio",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 11},
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_blks_hit{datname=\"helpdesk\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{datname=\"helpdesk\"}[5m])) + sum(rate(pg_stat_database_blks_read{datname=\"helpdesk\"}[5m])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      }
    },
    {
      "id": 9,
      "type": "logs",
      "title": "Helpdesk Logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "gridPos": {"h": 10, "w": 16, "x": 8, "y": 11},
      "targets": [
        {
          "expr": "{job=\"helpdesk\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": false,
        "prettifyLogMessage": false
      }
    }
  ]
}
